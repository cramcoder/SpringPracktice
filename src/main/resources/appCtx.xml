<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">


<context:component-scan base-package="spring"/>

<bean id="memberDao" class="spring.MemberDao"></bean>

<bean id="regSvc" class="spring.MemberRegisterService">
   <constructor-arg ref="memberDao"></constructor-arg>
</bean>

<bean id="pwdSvc" class="spring.ChangePasswordService">
   <constructor-arg ref="memberDao"></constructor-arg>
</bean>

<bean id="memberlist" class="spring.MemberPrinter"></bean>

<bean id="list" class="spring.MemberListPrinter">
   <constructor-arg ref="memberDao"></constructor-arg>
   <constructor-arg ref="memberPrinter"></constructor-arg>
</bean>

<bean id="info" class="spring.MemberInfoPrinter">
   <property name="memberDao" ref="memberDao"></property>
   <property name="printer" ref="memberPrinter"></property>
</bean>

</beans>
